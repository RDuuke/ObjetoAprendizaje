{% if flash.getMessage('info') %}
    <div class="ed-container full">
        <div class="ed-item s-100">
            <div class="chip blue">
                <span class="white-text">{{  flash.getMessage('info') | first | capitalize  }}</span>
                <i class="close material-icons">close</i>
            </div>
        </div>
    </div>
{% endif %}

{% if flash.getMessage('error') %}
    <div class="ed-container full">
        <div class="ed-item s-100">
            <div class="chip red">
                <span class="white-text">{{  flash.getMessage('error') | first | capitalize  }}</span>
                <i class="close material-icons">close</i>
            </div>
        </div>
    </div>
{% endif %}