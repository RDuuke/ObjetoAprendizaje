<li class="step active">
    <div class="step-title waves-effect">General</div>
    <div class="step-content ed-conatiner">
        <div class="input-field ed-item s-100">
            <input type="text" name="general[titulo]" required value="{{ object.titulo }}" class="validate">
            <label for="titulo">Titulo</label>
        </div>
        <div class="input-field ed-item s-100">
            <input type="text" name="general[idioma]" required value="{{ object.idioma }}"  class="validate">
            <label for="idioma">idioma</label>
        </div>
        <div class="input-field ed-item s-100">
            <textarea type="text" name="general[descripcion]" required class="materialize-textarea" id="t1" class="validate"> {{ object.descripcion }} </textarea>
            <label for="t1">Descripcion</label>
        </div>
        <div class="ed-item s-100">
            <label for="area_select_search">Area de conocimiento</label>
            <select id="area_select_search" class="browser-default full" name="area_select_search" required>
                <option value="">Areas</option>
            {% for a in areas %}
                {% set seaected = "" %}
                {% if (a.codigo == object.objeto_relation.nucleo.codigo_area) %}
                    {% set selected = "selected" %}
                {% endif %}
                <option value="{{ a.codigo }}" {{ selected }}>{{ a.name }}</option>
            {% endfor %}
            </select>
        </div>
        <br>
        <div class="ed-item s-100">
            <label for="nucleo_select_search">Nucleo de conocimiento</label>
            <select id="nucleo_select_search" class="browser-default full" name="nucleo_select_search" required>
                <option value="{{ object.objeto_relation.nucleo.codigo  }}">{{ object.objeto_relation.nucleo.name }}</option>
            </select>
        </div>
        <br>
        <div class="input-field ed-item s-100">
            <input type="text" name="general[tags]" required value="{{ object.tags }}" class="validate">
            <label for="tags">Palabras claves</label>
        </div>
