{% extends "template/base.twig" %}

{% block content %}
<br><br>
    <div class="ed-container">
        <div class="ed-item s-100">
            <form action="{{ path_for('user.store') }}" method="POST" class="ed-container" autocomplete="off">
                <div class="input-field ed-item s-100">
                    <input type="text" name="name" id="name" class="validate {{ errors.name ? ' invalid' : '' }}" placeholder="Nombre Apellido" value="{{ old.name }}">
                    <label for="name">Nombres y apellidos</label>
                    {% if errors.name %}
                        <span class="red accent-4 white-text" style="padding: .5em;">{{ errors.name | first }}</span>
                    {% endif %}
                    <br>
                    <br>
                </div>
                <div class="input-field ed-item s-100">
                    <input type="email" name="email" id="email" class="validate {{ errors.email ? ' invalid' : '' }}" placeholder="tu@correo.com" value="{{ old.email }}">
                    <label for="email">Correo electronico</label>
                    {% if errors.email %}
                        <span class="red accent-4 white-text" style="padding: .5em;">{{ errors.email | first }}</span>
                    {% endif %}
                    <br>
                    <br>
                </div>
                <div class="input-field ed-item s-100">
                    <input type="password" name="password" id="password" class="validate {{ errors.password ? ' invalid' : '' }}">
                    <label for="password">Contrase√±a</label>
                    {% if errors.password %}
                        <span class="red accent-4 white-text" style="padding: .5em;">{{ errors.password | first }}</span>
                    {% endif %}
                    <br>
                </div>

                <div class="input-field ed-item s-100">
                    <br>
                    <button>Crear cuenta</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}